let
fun mod (a, b) =
    let val q = div_(a, b)
    in
	a - (b * q)
    end

infix mod

    (* XXX *)
    fun int-tostring x = 
	let	
	    fun digtos x = putc (chr_ (ord ?0 + x))
	    fun pitos x = if x < 10
			  then digtos x
			  else (pitos(div_(x, 10)); digtos(x mod 10))
	in
	    if x < 0 
	    then 
		let in
		    putc ?~;
		    pitos (0 - x) 
		end
	    else pitos x
	end
in
    int-tostring (0 - 7)
end